<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetalleProductoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/coffee_primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del producto -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/iv_producto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_coffee_placeholder" />

                <!-- Indicador de producto popular -->
                <ImageView
                    android:id="@+id/iv_popular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_star"
                    android:background="@drawable/circle_background_gold"
                    android:padding="8dp"
                    android:visibility="gone" />

                <!-- Etiqueta de descuento -->
                <TextView
                    android:id="@+id/tv_descuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="16dp"
                    android:background="@drawable/discount_badge_background"
                    android:padding="8dp"
                    android:text="20% OFF"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- InformaciÃ³n del producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/tv_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CafÃ© Americano"
                    android:textColor="@color/coffee_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- CategorÃ­a -->
                <TextView
                    android:id="@+id/tv_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="CategorÃ­a: Bebidas Calientes"
                    android:textColor="@color/coffee_secondary"
                    android:textSize="14sp" />

                <!-- Precios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25.00"
                        android:textColor="@color/coffee_primary"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_precio_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="$30.00"
                        android:textColor="@color/coffee_secondary"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Stock -->
                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Stock: 15 unidades"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Sellos requeridos -->
                <TextView
                    android:id="@+id/tv_puntos_requeridos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â­ 100 sellos requeridos"
                    android:textSize="14sp"
                    android:textColor="@color/coffee_accent"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/coffee_light" />

                <!-- DescripciÃ³n -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n"
                    android:textColor="@color/coffee_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="CafÃ© negro preparado con granos premium de origen colombiano"
                    android:textColor="@color/coffee_secondary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />

                <!-- InformaciÃ³n nutricional -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="InformaciÃ³n Nutricional"
                    android:textColor="@color/coffee_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_calorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="CalorÃ­as: 5"
                    android:textColor="@color/coffee_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Ingredientes: CafÃ© 100% arÃ¡bica, agua"
                    android:textColor="@color/coffee_secondary"
                    android:textSize="14sp" />

                <!-- Indicadores dietÃ©ticos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CaracterÃ­sticas: "
                        android:textColor="@color/coffee_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_vegano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± Vegano"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/diet_badge_background"
                        android:padding="4dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_vegetariano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥¬ Vegetariano"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/diet_badge_background"
                        android:padding="4dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sin_lactosa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥› Sin Lactosa"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/diet_badge_background"
                        android:padding="4dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sin_gluten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¾ Sin Gluten"
                        android:textSize="12sp"
                        android:background="@drawable/diet_badge_background"
                        android:padding="4dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- ReseÃ±as y valoraciones -->
                <TextView
                    android:id="@+id/tv_titulo_resenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ReseÃ±as y valoraciones"
                    android:textColor="@color/coffee_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Promedio y cantidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_promedio_resenas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio: 0.0"
                        android:textColor="@color/coffee_secondary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_conteo_resenas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="(0 reseÃ±as)"
                        android:textColor="@color/coffee_secondary"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Formulario de reseÃ±a -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/rb_resena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="0"
                        style="@style/Widget.AppCompat.RatingBar" />

                    <EditText
                        android:id="@+id/et_comentario_resena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Escribe tu comentario (opcional)"
                        android:maxLines="3"
                        android:inputType="textMultiLine"
                        android:padding="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enviar_resena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Enviar reseÃ±a"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/coffee_primary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="textStart" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    

</androidx.coordinatorlayout.widget.CoordinatorLayout>
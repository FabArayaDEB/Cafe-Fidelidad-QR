<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de sincronización -->
        <View
            android:id="@+id/indicador_sync"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/color_pendiente"
            android:visibility="gone" />

        <!-- Icono de tipo -->
        <ImageView
            android:id="@+id/iv_tipo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_location"
            android:tint="@color/color_visita"
            tools:ignore="UseAppTint" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Visita"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_texto_primario" />

                <ImageView
                    android:id="@+id/iv_estado"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/color_enviado"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tv_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sucursal Centro"
                android:textSize="14sp"
                android:textColor="@color/color_texto_secundario" />

            <!-- Fecha y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25/12/2023 14:30"
                    android:textSize="12sp"
                    android:textColor="@color/color_texto_terciario" />

                <TextView
                    android:id="@+id/tv_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronizado"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_enviado" />

            </LinearLayout>

            <!-- Información adicional (opcional) -->
            <TextView
                android:id="@+id/tv_info_adicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Origen: QR Scanner"
                android:textSize="11sp"
                android:textColor="@color/color_texto_terciario"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
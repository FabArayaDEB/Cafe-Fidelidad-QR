<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentPerfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_perfil"
            android:src="@drawable/ic_account"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <!-- Nombres -->
        <TextView
            android:id="@+id/txt_nombres"
            android:text="@string/txt_nombres"
            android:layout_below="@+id/item_perfil"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nombres"
            android:text="@string/tv_nombres"
            android:layout_below="@+id/txt_nombres"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Email -->
        <TextView
            android:id="@+id/txt_email"
            android:text="@string/txt_email"
            android:layout_below="@+id/tv_nombres"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_email"
            android:text="--"
            android:layout_below="@+id/txt_email"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tiempo de registro -->
        <TextView
            android:id="@+id/txt_registro"
            android:text="@string/txt_registro"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_registro"
            android:text="@string/tv_registro"
            android:layout_below="@+id/txt_registro"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/UpdateUserData"
            android:text="@string/btn_UpdateUserData"
            android:textAllCaps="true"
            app:cornerRadius="30dp"
            android:layout_below="@+id/tv_registro"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="30dp"
            android:id="@+id/btn_Logout"
            android:text="@string/btn_Logout"
            android:textAllCaps="true"
            android:layout_below="@+id/UpdateUserData"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>
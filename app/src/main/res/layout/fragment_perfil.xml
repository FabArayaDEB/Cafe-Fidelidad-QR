<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con saludo personalizado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_saludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola freyGT"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_mcid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="McID: FHPEMK"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Sección de QR Personal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/qr_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanea el código QR y disfruta más beneficios"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprovecha promociones y descuentos exclusivos"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- QR Code Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_qr_personal"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_qr_placeholder" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toca el código para ampliarlo"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:gravity="center" />

        </LinearLayout>

        <!-- Mi Cuenta - Sección única -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginTop="16dp">

             <!-- Mi Cuenta -->
             <LinearLayout
                 android:id="@+id/layout_mi_cuenta"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="16dp"
                 android:gravity="center_vertical"
                 android:background="?android:attr/selectableItemBackground"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@drawable/ic_person"
                     android:layout_marginEnd="16dp"
                     app:tint="@color/gray" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Mi Cuenta"
                     android:textSize="16sp"
                     android:textColor="@color/black" />

                 <ImageView
                     android:layout_width="16dp"
                     android:layout_height="16dp"
                     android:src="@drawable/ic_arrow_forward"
                     app:tint="@color/gray" />

             </LinearLayout>

         </LinearLayout>

        <!-- Información del Usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Nombres -->
            <TextView
                android:id="@+id/txt_nombres"
                android:text="@string/txt_nombres"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_nombres"
                android:text="@string/tv_nombres"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Email -->
            <TextView
                android:id="@+id/txt_email"
                android:text="@string/txt_email"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_email"
                android:text="--"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Teléfono -->
            <TextView
                android:id="@+id/txt_telefono"
                android:text="@string/txt_telefono"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_telefono"
                android:text="--"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Fecha de Nacimiento -->
            <TextView
                android:id="@+id/txt_fecha_nacimiento"
                android:text="@string/txt_fecha_nacimiento"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_fecha_nacimiento"
                android:text="--"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Puntos Actuales -->
            <TextView
                android:id="@+id/txt_puntos"
                android:text="@string/txt_puntos_actuales"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/coffee_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_puntos"
                android:text="0"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/coffee_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Nivel de Lealtad -->
            <TextView
                android:id="@+id/txt_nivel"
                android:text="@string/txt_nivel_lealtad"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_nivel"
                android:text="Bronce"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Compras Totales -->
            <TextView
                android:id="@+id/txt_compras_totales"
                android:text="@string/txt_compras_totales"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_compras_totales"
                android:text="$0"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Puntos para Siguiente Nivel -->
            <TextView
                android:id="@+id/txt_puntos_siguiente"
                android:text="@string/txt_puntos_siguiente_nivel"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_puntos_siguiente"
                android:text="0"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Última Visita -->
            <TextView
                android:id="@+id/txt_ultima_visita"
                android:text="@string/txt_ultima_visita"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_ultima_visita"
                android:text="--"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Tiempo de registro -->
            <TextView
                android:id="@+id/txt_registro"
                android:text="@string/txt_registro"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_registro"
                android:text="@string/tv_registro"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_historial"
            android:text="@string/historial"
            android:textAllCaps="true"
            app:cornerRadius="30dp"
            android:layout_below="@+id/tv_registro"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="30dp"
            android:id="@+id/btn_Logout"
            android:text="@string/btn_Logout"
            android:textAllCaps="true"
            android:layout_below="@+id/btn_historial"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
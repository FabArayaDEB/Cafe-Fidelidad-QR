<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard Administrativo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de catálogo y sucursales"
            android:textSize="16sp"
            android:textColor="@color/color_text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- (Se eliminaron métricas principales y listas de productos/clientes frecuentes) -->

        <!-- Cards de navegación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Card Productos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconProductos"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_add_shopping_cart" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloProductos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Productos"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionProductos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar catálogo de productos"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                        <TextView
                            android:id="@+id/textContadorProductos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 productos"
                            android:textSize="12sp"
                            android:textColor="@color/color_text_secondary"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Beneficios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBeneficios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconBeneficios"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_card_giftcard" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloBeneficios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficios"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionBeneficios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Administrar promociones y ofertas"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                        <TextView
                            android:id="@+id/textContadorBeneficios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Clientes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconClientes"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_people" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Administrar usuarios y fidelización"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                        <TextView
                            android:id="@+id/textContadorClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Sucursales -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSucursales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconSucursales"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_location" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloSucursales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sucursales"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionSucursales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar ubicaciones y horarios"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                        <TextView
                            android:id="@+id/textContadorSucursales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- (Tarjeta de Estadísticas eliminada) -->

            <!-- Card Configuración -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConfiguracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconConfiguracion"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_security" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloConfiguracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configuración"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionConfiguracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajustes del sistema"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Reseñas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResenas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconResenas"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_chat" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloResenas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reseñas"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionResenas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver comentarios de productos y sucursales"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Escanear QR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconScanner"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_qr" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTituloScanner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Escanear QR"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_primary" />

                        <TextView
                            android:id="@+id/textDescripcionScanner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Identificar cliente por código QR"
                            android:textSize="14sp"
                            android:textColor="@color/color_on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonActualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Actualizar"
                app:icon="@drawable/ic_refresh" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSincronizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Sincronizar"
                app:icon="@drawable/ic_sync" />

        </LinearLayout>

        <!-- Actividad reciente -->
        <LinearLayout
            android:id="@+id/layoutActividadReciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividad Reciente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
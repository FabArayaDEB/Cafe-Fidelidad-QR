<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información del beneficio -->
        <TextView
            android:id="@+id/tv_nombre_beneficio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Beneficio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/tv_descripcion_beneficio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción del beneficio"
            android:textSize="14sp"
            android:textColor="@color/color_texto_secundario" />

        <!-- Progreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary" />

            <TextView
                android:id="@+id/tv_progreso_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <!-- Información de visitas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_visitas_requeridas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Visitas requeridas: 0"
                android:textSize="12sp"
                android:textColor="@color/color_texto_secundario" />

            <TextView
                android:id="@+id/tv_visitas_faltantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Te faltan 0 visitas"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gold_accent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
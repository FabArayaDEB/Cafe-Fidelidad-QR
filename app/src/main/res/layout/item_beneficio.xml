<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con icono, nombre y valor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icono_beneficio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:src="@drawable/ic_star"
                app:tint="@color/coffee_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_beneficio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/coffee_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="¡5 Visitas Completadas!" />

                <TextView
                    android:id="@+id/tv_descripcion_beneficio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/coffee_light"
                    android:textSize="14sp"
                    tools:text="10% de descuento en tu próxima compra" />

            </LinearLayout>

            <!-- Valor del beneficio -->
            <TextView
                android:id="@+id/tv_valor_beneficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="-10%" />

        </LinearLayout>

        <!-- Información adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Fecha de vencimiento -->
            <TextView
                android:id="@+id/tv_vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/coffee_light"
                android:textSize="12sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/coffee_light"
                tools:text="Vence: 15/12/2024"
                tools:visibility="visible" />

            <!-- Usos restantes -->
            <TextView
                android:id="@+id/tv_usos_restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/coffee_light"
                android:textSize="12sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_counter"
                app:drawableTint="@color/coffee_light"
                tools:text="Usos restantes: 1"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Estado y botón de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Estado del beneficio -->
            <TextView
                android:id="@+id/tv_estado_beneficio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/status_background"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/success_green"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="USADO"
                tools:visibility="visible" />

            <!-- Botón de usar beneficio -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_usar_beneficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Usar Beneficio"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:backgroundTint="@color/coffee_primary"
                app:cornerRadius="20dp"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Separador para beneficios especiales -->
        <View
            android:id="@+id/separator_especial"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_separator"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_producto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor de imagen con indicadores -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <!-- Imagen del producto -->
            <ImageView
                android:id="@+id/iv_producto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_coffee_placeholder" />

            <!-- Indicador de producto popular -->
            <ImageView
                android:id="@+id/iv_popular"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                android:background="@drawable/circle_background_gold"
                android:padding="6dp"
                android:visibility="gone" />

            <!-- Etiqueta de descuento -->
            <TextView
                android:id="@+id/tv_descuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/discount_badge_background"
                android:padding="6dp"
                android:text="20% OFF"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- InformaciÃ³n del producto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CafÃ© Americano"
                android:textColor="@color/coffee_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

            <!-- DescripciÃ³n del producto -->
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="CafÃ© negro preparado con granos premium"
                android:textColor="@color/coffee_secondary"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

            <!-- Contenedor de precios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Precio actual -->
                <TextView
                    android:id="@+id/tv_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25.00"
                    android:textColor="@color/coffee_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Precio original (tachado) -->
                <TextView
                    android:id="@+id/tv_precio_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="$30.00"
                    android:textColor="@color/coffee_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- InformaciÃ³n adicional (opcional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Indicadores de dieta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vegano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ±"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_vegetariano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥¬"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_sin_lactosa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥›"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_sin_gluten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¾"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <!-- Estado: stock y puntos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Stock -->
                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 15"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Puntos requeridos (si aplica) -->
                <TextView
                    android:id="@+id/tv_puntos_requeridos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ 100 pts"
                    android:textSize="12sp"
                    android:textColor="@color/coffee_accent"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
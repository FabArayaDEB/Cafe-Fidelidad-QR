<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBeneficio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:rippleColor="@color/color_primary"
    app:strokeColor="@color/color_success"
    app:strokeWidth="2dp">

    <!-- Indicador de disponible -->
    <View
        android:id="@+id/indicadorDisponible"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_success" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header con icono y tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icono del beneficio -->
            <ImageView
                android:id="@+id/iconBeneficio"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_card_giftcard"
                app:tint="@color/color_success" />

            <!-- Chip de tipo -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuento"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/color_success"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Badge de disponible -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_disponible"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="¡DISPONIBLE!"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/color_on_success"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Información principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Nombre del beneficio -->
            <TextView
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Descuento por fidelidad"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/color_on_surface"
                android:textStyle="bold" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="¡Felicidades! Has alcanzado el beneficio por tus 5 visitas"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/color_on_surface_variant" />

            <!-- Valor destacado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_valor_destacado"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="10% OFF"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@color/color_success"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Icono de regalo -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_celebration"
                    app:tint="@color/color_success" />

            </LinearLayout>

        </LinearLayout>

        <!-- Información de vigencia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_schedule"
                app:tint="@color/color_warning" />

            <TextView
                android:id="@+id/textVigencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Válido hasta 31/12/2024"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/color_warning" />

        </LinearLayout>

        <!-- Botón de usar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUsar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="USAR BENEFICIO"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textStyle="bold"
            app:backgroundTint="@color/color_success"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_redeem"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/color_on_success" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
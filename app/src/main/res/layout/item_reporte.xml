<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del reporte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Información principal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Título del reporte -->
                <TextView
                    android:id="@+id/tv_titulo_reporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título del Reporte"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary" />

                <!-- Tipo y fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tipo_reporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary"
                        android:background="@color/color_primary_container"
                        android:padding="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_fecha_reporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2024 10:00"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

            <!-- Estado -->
            <TextView
                android:id="@+id/tv_estado_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_success"
                android:background="@color/color_success_container"
                android:padding="6dp"
                android:layout_marginStart="8dp" />

            <!-- Botón de exportar -->
            <ImageButton
                android:id="@+id/btn_export_reporte"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/stat_sys_download"
                android:contentDescription="Exportar reporte"
                android:tint="@color/color_primary" />

        </LinearLayout>

        <!-- Información adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Sucursal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_sucursal_reporte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Sucursal Principal"
                    android:textSize="14sp"
                    android:textColor="@color/color_primary" />

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_descripcion_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descripción del reporte con detalles adicionales"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
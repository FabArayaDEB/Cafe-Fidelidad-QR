<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBeneficio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Progreso circular pequeño -->
        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressCircular"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:progress="60"
                app:indicatorColor="@color/color_primary"
                app:indicatorSize="64dp"
                app:trackColor="@color/color_outline_variant"
                app:trackThickness="4dp" />

            <!-- Texto central del progreso -->
            <TextView
                android:id="@+id/textProgresoNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="3/5"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/color_primary"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Información del beneficio -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header con tipo y valor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Chip de tipo -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Descuento"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/color_primary"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="24dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Valor del beneficio -->
                <TextView
                    android:id="@+id/textValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_valor_beneficio"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="15% OFF"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/color_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Nombre del beneficio -->
            <TextView
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Descuento especial por fidelidad"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/color_on_surface" />

            <!-- Descripción del progreso -->
            <TextView
                android:id="@+id/textProgresoDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Solo 2 visitas más para desbloquear este beneficio"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/color_on_surface_variant" />

            <!-- Regla del beneficio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconRegla"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_rule"
                    app:tint="@color/color_on_surface_variant" />

                <TextView
                    android:id="@+id/textRegla"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Cada 5 visitas"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/color_on_surface_variant" />

                <!-- Indicador de motivación -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_trending_up"
                    app:tint="@color/color_primary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
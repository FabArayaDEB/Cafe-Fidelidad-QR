<?xml version="1.0" encoding="utf-8"?>
<!-- Se creo un nuevo fragment para mostrar el QR del cliente-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.FragmentQrVisitaCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_qr_registro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vienvenido"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_qr_registro_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo QR exclusivo y unico para almacenar tus visitas y recibir tus recompensas"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/qr_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanea el código QR y disfruta más beneficios"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprovecha promociones y descuentos exclusivos"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_qr_visita"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_gravity="center"
                        android:contentDescription="qr_content_description_visita"
                        android:scaleType="fitCenter"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:indeterminateTint="@color/coffee_primary"
                        style="?android:attr/progressBarStyleLarge" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toca el QR para ampliarlo"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:gravity="center" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Ver mis visitas almacenadas"
            android:textAllCaps="true"
            app:cornerRadius="30dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/coffee_primary"
            app:strokeColor="@color/coffee_primary" />

    </LinearLayout>

</ScrollView>
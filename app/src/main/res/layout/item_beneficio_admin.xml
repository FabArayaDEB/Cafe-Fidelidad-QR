<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBeneficio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/color_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con tipo y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icono del tipo de beneficio -->
            <ImageView
                android:id="@+id/iconTipo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_card_giftcard"
                app:tint="@color/color_primary" />

            <!-- Chip de tipo -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Descuento"
                android:textColor="@color/color_on_primary"
                app:chipBackgroundColor="@color/color_primary"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="28dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Switch de estado activo/inactivo -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/color_primary"
                app:trackTint="@color/color_outline" />

        </LinearLayout>

        <!-- Información principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <!-- Nombre del beneficio -->
            <TextView
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Descuento por fidelidad"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/color_on_surface" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Obtén 10% de descuento cada 5 visitas"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/color_on_surface_variant" />

            <!-- Valor del beneficio -->
            <TextView
                android:id="@+id/textValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_valor_beneficio"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="10% OFF"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/color_primary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Reglas y vigencia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <!-- Reglas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_rule"
                    app:tint="@color/color_on_surface_variant" />

                <TextView
                    android:id="@+id/textReglas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Cada 5 visitas"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/color_on_surface_variant" />

            </LinearLayout>

            <!-- Vigencia -->
            <LinearLayout
                android:id="@+id/layoutVigencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_schedule"
                    app:tint="@color/color_on_surface_variant" />

                <TextView
                    android:id="@+id/textVigencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Válido hasta 31/12/2024"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/color_on_surface_variant" />

            </LinearLayout>

        </LinearLayout>

        <!-- Estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <!-- Usos totales -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUsosTotales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/color_primary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usos"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/color_on_surface_variant" />

            </LinearLayout>

            <!-- Separador -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/color_outline_variant" />

            <!-- Clientes beneficiados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textClientesBeneficiados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/color_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clientes"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/color_on_surface_variant" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Botón editar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Editar"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/color_primary" />

            <!-- Botón eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textColor="@color/color_error"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/color_error" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
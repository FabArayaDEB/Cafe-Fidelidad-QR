<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentHistorial">

    <!-- AppBar con filtros -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/color_primario">

            <!-- Filtros de tipo y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Filtro por tipo -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_tipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_todos"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_visitas"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visitas" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_canjes"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canjes" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Botón de filtros avanzados -->
                <ImageButton
                    android:id="@+id/btn_filtros"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_filter"
                    android:tint="@android:color/white"
                    android:contentDescription="Filtros avanzados"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <!-- Filtro por estado -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_todos_estados"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos los estados"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pendientes"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendientes" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_enviados"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviados" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lista de historial -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_historial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                tools:listitem="@layout/item_historial" />

            <!-- Estado vacío -->
            <LinearLayout
                android:id="@+id/layout_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_history_empty"
                    android:tint="@color/color_texto_terciario"
                    android:alpha="0.6"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tv_empty_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No hay historial"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_texto_secundario" />

                <TextView
                    android:id="@+id/tv_empty_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Aún no tienes visitas o canjes registrados"
                    android:textSize="14sp"
                    android:textColor="@color/color_texto_terciario"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- Indicador de carga -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Mensaje de error -->
            <LinearLayout
                android:id="@+id/layout_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_error"
                    android:tint="@color/color_error"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tv_error_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Error al cargar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_error" />

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No se pudo cargar el historial"
                    android:textSize="14sp"
                    android:textColor="@color/color_texto_secundario"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Reintentar" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Botón flotante para scroll to top -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scroll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_upward"
        android:visibility="gone"
        app:tint="@android:color/white"
        tools:visibility="visible" />

    <!-- Barra de estado de sincronización -->
    <LinearLayout
        android:id="@+id/layout_sync_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/color_info"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/progress_sync"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_sync_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sincronizando datos..."
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_close_sync"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"
            android:contentDescription="Cerrar"
            tools:ignore="UseAppTint" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>